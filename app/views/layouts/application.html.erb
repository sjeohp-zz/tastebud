<!DOCTYPE html>
<html>
<head>
	<title>tastebud</title>
	
    <% if !logged_in? %>
    <div style="float:right"><%= link_to "Sign in", "/sign_in" %>
    <%= link_to "Sign up", "/sign_up" %></div>
    <% else %>
    <div style="float:right"><%= link_to "Sign out", "/sign_out" %></div>
    <% end %>
	
  <h1>tastebud</h1>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  
  
</head>
<body>

<% flash.each do |name, msg| -%>
	<%= content_tag :div, msg, class: name %>
<% end -%>

	<br />
	<br />
	
	<div>
		<%= form_for @search, :url => {controller: 'search', action: 'create' } do |f| %>
		<%= f.label :key %>
		<%= f.text_field :key %>
		<%= f.label :medium %>
		<%= f.text_field :medium %>
		<%= f.submit 'Search'%>
		<% end %>
		<br />
		<%= "#{@search.results.map{|elem| elem[0]}.flatten.join(', ')}" %>
	</div>

<%= yield %>

</body>
</html>
